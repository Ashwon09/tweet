{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program with nodemon",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "nodemon", // Use nodemon as the runtime executable
      "program": "${workspaceFolder}/server/index.js",
      "restart": true, // Enable automatic restart on file changes
      "console": "integratedTerminal" // Open the integrated terminal for console output
    }
  ]
}
